<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HeaderArea"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageroadbike"
                    android:src="@drawable/cycler1"
                    android:layout_weight="1"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="RideMate"
                    android:id="@+id/textName"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:clickable="false"
                    android:textSize="35dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagemtb"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:src="@drawable/cycler2" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a5ffd9"
        android:padding="10dp"
        android:id="@+id/layMain" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" Select An Action:"
            android:id="@+id/txtSelectAction"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:id="@+id/imgbtnAddNew"
                android:src="@drawable/add"
                android:background="#00000000"
                android:clickable="true"
                android:layout_gravity="left"
                android:layout_weight="0.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add New Cyclist"
                android:id="@+id/txtAddCyclist"
                android:layout_weight="0.42"
                android:gravity="center"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtndelete2"
                android:src="@drawable/delete"
                android:background="#00000000"
                android:layout_weight="1.38"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Delete Cyclist Details"
                android:id="@+id/txtDelete"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnList"
                android:src="@drawable/view"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="View All Cyclists"
                android:id="@+id/txtViewList"
                android:paddingLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.37"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/imgBtnUpdate"
                android:src="@drawable/update"
                android:background="#00000000"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update a Cyclist&apos;s info"
                android:id="@+id/txtUpdate"
                android:gravity="center"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <!-- Icons from: https://icons8.com/web-app/category/android/Very-Basic -->
</LinearLayout>
