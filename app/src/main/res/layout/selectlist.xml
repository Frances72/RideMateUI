<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/HeaderArea"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageroadbike"
                    android:src="@drawable/cycler1"
                    android:layout_weight="1"
                    android:layout_gravity="bottom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="RideMate"
                    android:id="@+id/textName"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:clickable="false"
                    android:textSize="35dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imagemtb"
                    android:layout_weight="1"
                    android:src="@drawable/cycler2"
                    android:layout_gravity="bottom" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/BottomArea"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#7fc1f2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Select a Cyclist to Delete or Update"
                android:id="@+id/textListCyclists"
                android:paddingLeft="20dp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:id="@+id/listView"
            android:smoothScrollbar="true" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:id="@+id/btnDelete"
                android:layout_weight="1"
                android:background="#ff5272"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:onClick="onClick"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:id="@+id/btnUpdate"
                android:layout_weight="1"
                android:background="#ff5272"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:background="#a5ffd9"
        android:padding="10dp"
        android:id="@+id/MidArea"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnHome"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:background="#00000000"
                android:clickable="true"
                android:onClick="onClick"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/view"
                android:background="#00000000"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onClick"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgBtnAdd"
                android:src="@drawable/add"
                android:background="#00000000"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="onClick"/>

        </LinearLayout>
    </LinearLayout>
    <!-- Icons from: https://icons8.com/web-app/category/android/Very-Basic -->
</LinearLayout>