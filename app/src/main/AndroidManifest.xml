<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fa.tp2.ridemateui" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.AddNewCyclistActivity"
            android:label="@string/title_addnewcyclist" >
        </activity>
        <activity
            android:name=".views.SelectListActivity"
            android:label="@string/title_selectlist" >
        </activity>
        <activity
            android:name=".views.UpdateCyclistActivity"
            android:label="@string/title_updatecyclist" >
        </activity>
        <activity
            android:name=".views.ViewAll"
            android:label="@string/title_viewall" >
        </activity>
    </application>

</manifest>
